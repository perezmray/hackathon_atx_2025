# Candidate API Environment Variables Example
# Copy this file to .env and fill in the secrets/connection details.

# Cosmos DB
COSMOSDB_ENDPOINT=
COSMOSDB_KEY=
COSMOSDB_DATABASE=candidates_db
COSMOSDB_CANDIDATES_CONTAINER=candidates
COSMOSDB_MATERIALS_CONTAINER=candidate_materials

# Azure Storage (for candidate materials)
AZURE_STORAGE_CONNECTION_STRING=
CANDIDATE_MATERIALS_CONTAINER=candidate-materials

# File upload constraints
MAX_CANDIDATE_FILE_SIZE_MB=10
# Comma-separated list of allowed MIME type prefixes
ALLOWED_CANDIDATE_MIME_PREFIXES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Optional: override logging level if you later add structured logging
LOG_LEVEL=INFO
